/* 
 * # Bootstrap F-Flat
 */

'pre-core.ff'
  prelude.__sys_path__ 
  swap [ ] >> >> path-join resolve            // resolve
  read eval                                   // eval and export

'module-loader.ff'
  prelude.__sys_path__
  swap [ ] >> >> path-join resolve            // resolve
  [
    dup [ ] >> '__filename' swap def
    read eval
  ] >> module use    // eval and export

'usr.ff' if-exists-load
